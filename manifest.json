{
  "manifest_version": 3,
  "name": "Captcha Reader",
  "version": "1.0.0",
  "description": "Right-click on captcha images to read numbers and copy to clipboard",
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "incognito": "spanning"
}
